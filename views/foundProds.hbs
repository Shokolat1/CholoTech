{{>nav}}

<section class="py-2">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-3 justify-content-center">
            {{#each prods}}
            <div class="col mb-5">
                <div class="card h-100 align-items-center py-2">
                    <!-- Product image-->
                    <img class="card-img-top img-fluid" src={{this.img}} alt="..." style="width:200px;height:200px;object-fit:contain;"/>
                    <!-- Product details-->
                    <div class="card-body p-3">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">{{this.nom}}</h5>
                            <!-- Product price-->
                            {{this.descr}}
                            <br><br>
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <p class="text-center"><strong>{{this.price}}</strong> <img src="/images/{{this.company}}.png" alt="..." style="width:50px;height:50px;object-fit:contain;margin-left:5px;"></p>
                            <p class="text-center">Precio de env√≠o: {{this.send}}</strong></p>
                        <div class="text-center"><a class="btn btn-outline-dark mt-auto" href={{this.link}}>Comprar</a> </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

{{>footer}}